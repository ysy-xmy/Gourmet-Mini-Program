.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 83px;
  background: rgba(255, 255, 255, 1.0); 
  display: flex;
  box-shadow: 0px 2px 171px 0px rgba(19, 18, 18, 0.33);

  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
}
.tab-bar-border {
  background-color: #ffffff;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 0px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 32px;
  height: 32px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}

.main {
  width: 100vw;
  /* box-shadow: 0px 2px 171px 0px rgba(19, 18, 18, 0.33); */
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  background-color: #ffffff;
  height: 70px;
  display: flex;
  align-items: flex-start;
  z-index: 40;
}

.tab-bar {
  position: fixed;
  width: 100vw;
  height: 70px;
  background-color: #ffffff;
  display: flex;
  padding-bottom: 40px;
}
.tab-bar-border {
  background-color: #eeeeee;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 5px;
}

.tab-bar-item cover-image {
  width: 30px;
  height: 30px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
.text{
  margin-top: 5px;
}
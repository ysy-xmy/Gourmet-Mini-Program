.main{
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  background: #f9f9f9;
  padding-bottom: 100rpx;
}
.search{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  flex:7;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.nav{
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  font-size: 20px;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}
.list{
  width: 100%;
  padding-bottom: 50px;
  border-radius: 10px;
  background: rgb(255, 255, 255);
    display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.card{
  display: flex;
  flex-direction: row;
  width: 94%;
  margin-top: 15px;
  flex-wrap: wrap;
  justify-content: center;
}
.card-left{
  flex:3
}
.card-right{
  flex:7
}
.hangjz{
  display: flex;
  justify-content: space-between;
}
.card-title{
  margin-left: 8px;
  font-size: 30rpx;
  font-weight: normal;
  color: rgba(0, 0, 0, 1);
  width: 100%;
}
.card-distance{
width: 50%;
height: 26px;
line-height: 26px;
font-size: 14px;
font-weight: 400;
letter-spacing: 0.6px;
color:#848b87;
text-align: right;
}
.card-detail{

margin-left: 8px;
font-size: 25rpx;
font-weight: 400;
letter-spacing: -0.4px;
width: 480rpx;
height: 45px;
opacity: 0.64;
overflow: hidden;
color: rgba(1, 15, 7, 1);
}
.card-img{
  border-radius: 8px;
  width: 100px;
  height: 90px;
  
}
.card-star{
  font-size: 12px;
font-weight: 400;
letter-spacing: -0.25px;
line-height: 0px;
color: rgba(1, 15, 7, 1);
text-align: left;
margin-left: 8px;
opacity: 0.74;

}
.card-price{
  margin-left: 10px;
  font-size: 12px;
  font-weight: normal;
  letter-spacing: -0.25px;
  color: rgba(1, 15, 7, 1);
  text-align: left;
}
.line{
  margin-top: 10px;
  width: 94vw;
  height: 0px;
  background-color: #f9f9f9;
  border: 0.4px solid rgba(205, 205, 205, 1);            
  
  
}
.searchbar {
  font-size: 14px;
  font-family: arial, sans-serif;
  color: #202124;
  display: flex;
  z-index: 3;
  height: 36px;
  background: white;
  border: 1px solid #dfe1e5;
  width: 264px;
  height: 32px;
  border-radius: 999px;  
  border: 2px solid rgba(59, 130, 246, 1);
  width: 90%;
}

.searchbar:hover {
  box-shadow: 0 1px 6px rgb(32 33 36 / 28%);
  border-color: rgba(223, 225, 229, 0);
}

.searchbar-wrapper {
  flex: 1;
  display: flex;
  height: 100%;
}


.search-icon-wrapper {
  margin: auto;
}
.searchbar-center {
  display: flex;
  flex: 7;
  flex-wrap: wrap;
  height: 100%;
}
.searchbar-right{
  display: flex;
  flex: 2;
  margin-left: 80rpx;
  justify-content: flex-end;
}
.searchbar-btn{
  border-radius: 999px;
  background: rgba(59, 130, 246, 1);
  padding: 4px 18px 4px 18px;
  color:#fff;
  font-size: 28rpx;
  font-weight: lighter;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.searchbar-input-spacer {
  color: transparent;
  flex: 100%;
  white-space: pre;
  height: 34px;
  font-size: 16px;
}

.searchbar-input {
  background-color: transparent;
  border: none;
  color: rgba(0, 0, 0, .87);
  word-wrap: break-word;
  outline: none;
  display: flex;
  flex: 100%;
  margin-top: -37px;
  height: 34px;
  font-size: 16px;
  max-width: 100%;
  width: 100%;
  font-size: 27rpx;
  font-weight: normal;
  letter-spacing: -0.24px;
  color:rgba(156, 163, 175, 1);
  line-height: 0px;
  text-align: left;
  vertical-align: top;
  padding-left: 10px;
  line-height: 34px;
}
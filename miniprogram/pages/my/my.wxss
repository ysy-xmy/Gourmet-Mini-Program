.main{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
 
}
.body-top{
  width: 100vw;
  height: 400rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  background-image: url("");
  background-repeat: no-repeat;
  background-size: cover;
}
.body-bottom{
  width: 100vw;
  height: 500rpx;
 
}
.bg{
  position: absolute;
  float: top;
  width:100vw ;
  opacity: 0.8;
  z-index: 3;
  background-color: #000000;
}
.user-card{
  width: 100%;
  height: 300rpx;
  display: flex;
  z-index: 4;
}
.user-card-left{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-card-right{
  flex:7;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}
.user-card-name{
  width: 100%;
  font-weight: bold;
  font-size: 32rpx;

}
.user-card-detail{
  width: 100%;
  font-size: 18rpx;
  font-weight: normal;
  opacity: 0.9;
  margin-top: 10px;
}

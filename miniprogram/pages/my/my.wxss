.main{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.body-top{
  width: 100vw;
  height: 350rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.body-bottom{
  width: 100vw;
  height: 500rpx;
  
}
.bg{
  position: absolute;
  float: top;
  width:100vw ;
  height: 350rpx;
  opacity: 0.8;
  z-index: 3;
  background-color: rgb(138, 138, 138);
}
.user-card{
  width: 100%;
  height: 300rpx;
  display: flex;
  z-index: 4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card{
width: 500rpx;
height: 190rpx;
border-radius: 20rpx;
background: rgba(255, 255, 255, 1);
box-shadow: 2px 11px 32px 0px rgba(0, 0, 0, 0.3);
display: flex;
justify-content: center;
flex-wrap: wrap;
align-content: space-around;
}
.card-title{
  width: 100%;
  text-align: center;
 font-size: 40rpx;
 font-weight: bold;
}
.card-text{
width: 170px;
height: 29px;
font-size: 10px;
font-weight: normal;
line-height: 14.4px;
color: rgba(153, 153, 153, 1);
text-align: left;
vertical-align: top;

}
.user-card-left{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-card-right{
  flex:7;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}
.user-card-name{
  width: 100%;
  font-weight: bold;
  font-size: 32rpx;
  color:#fdfbf5;
}
.user-card-detail{
  width: 100%;
  font-size: 18rpx;
  font-weight: normal;
  opacity: 0.8;
  margin-top: 10px;
  color:#fdfbf5
}
.tabbar{
  width: 100%;
  margin-top: 20rpx;
}
.tabbar-item{
  width: 25%;
  display: inline-block;
  text-align: center;
  font-weight: bold;
  
}
.active{
  text-decoration: underline black 2px;
}
.tiezi-avatar{
  width: 90rpx;
  height: 90rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 3px;
  border-bottom-left-radius: 10px;
}
.tiezi-left{
  width: 85%;
  display: flex;
  flex-wrap: nowrap;
}
.tiezi-item{
  width: 90%;
  display: flex;
  flex-wrap: nowrap;
  height: 90rpx;
  margin-bottom: 60rpx;
}
.tiezi{
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  flex-wrap: wrap;
  
}
.tiezi-text{
  width: 80%;
  height: 100%;
  font-size: 38rpx;
}
.tiezi-time{
  width: 20%;

  font-size: 22rpx;
  align-items: flex-end;
  display: flex;
}
.nologin{
  
  width: 100%;
  height: 360px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nologin-text{
  font-size: 40rpx;

}
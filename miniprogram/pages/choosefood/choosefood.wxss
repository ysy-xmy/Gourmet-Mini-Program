.main{
  width: 100%;
  padding-bottom: 150px;
  background-color: #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: flex-start;
}
.bg{
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bg-pic{
  width: 75vw;
  height: 75vw;
}
.food-text{
  width: 100%;
  font-size: 50rpx;
  text-align: center;
  margin-top: 40rpx;
}
.choosethis{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 8px;
  background: #4169e1;
  color: #fff;
  font-size: 40rpx;
}
.next{
  margin-top: 30rpx;
  border-radius: 8px;
  background: #4169e1;
  color: #fff;
  font-size: 40rpx;
}
.btn{
  margin-top: 40rpx;
  width: 100%;
}
.card{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-top: 15px;
}
.card-left{
  flex:3
}
.card-right{
  flex:7
}
.hangjz{
  display: flex;
  justify-content: space-between;
}
.card-title{
  margin-left: 15px;
  font-size: 20px;
  font-weight: normal;
  color: rgba(0, 0, 0, 1);
}
.card-distance{
width: 50%;
height: 26px;
line-height: 26px;
font-size: 14px;
font-weight: 400;
letter-spacing: 0.6px;
color: #848b87;
text-align: right;
}
.card-detail{
margin-left: 15px;
font-size: 16px;
font-weight: 400;
letter-spacing: -0.4px;
width: 204px;
height: 45px;
opacity: 0.64;
overflow: hidden;
color: rgba(1, 15, 7, 1);
}
.card-img{
  border-radius: 8px;
  width: 100px;
  height: 90px;
}
.card-star{
  font-size: 14px;
  font-weight: 400;
  letter-spacing: -0.25px;
  line-height: 0px;
  color: rgba(1, 15, 7, 1);
  text-align: left;
  margin-left: 15px;
  opacity: 0.74;
}
.card-price{
margin-left: 10px;
font-size: 14px;
font-weight: 400;
letter-spacing: -0.25px;
line-height: 0px;
color: rgba(1, 15, 7, 1);
text-align: left;
}
.shop-tip{
  text-align: left;
  width: 100%;
  padding-left: 50rpx;
}

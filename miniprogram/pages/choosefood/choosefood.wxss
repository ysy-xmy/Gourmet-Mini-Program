/* index.wxss */
.top-select{
  width: 100vw;
  display: flex;
  flex-wrap: nowrap;
  margin-bottom: 20px;
}

picker{
   width: 50vw;
   display: flex;
   flex-wrap: nowrap;
}
.picker {
  font-size: 16px;
  color: rgba(17, 24, 39, 1);
  padding: 15px 20px;
  width: 300rpx;
  text-align: center;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid #ccc;
  margin-left: 10px;
}